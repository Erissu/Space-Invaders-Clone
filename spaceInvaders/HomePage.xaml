<Page
    x:Class="spaceInvaders.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#000000">

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="20">

        <TextBlock Text="SPACE INVADERS"
                   FontSize="48"
                   FontWeight="Bold"
                   Foreground="#FFFFFF"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,50"/>

        <Button x:Name="NewGameButton"
                Content="Novo Jogo"
                Click="NewGameButton_Click"
                HorizontalAlignment="Stretch"
                Padding="10"/>

        <Button x:Name="HighScoresButton"
                Content="Placares"
                Click="HighScoresButton_Click"
                HorizontalAlignment="Stretch"
                Padding="10"/>

        <Button x:Name="ControlsButton"
                Content="Controles"
                Click="ControlsButton_Click"
                HorizontalAlignment="Stretch"
                Padding="10"/>

    </StackPanel>
</Page>
